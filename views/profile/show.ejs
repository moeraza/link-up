<% include ../partials/header %>

<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-4">
      <h1 class="text-center">
        <%= links[1].author.username %>'s Links
      </h1>
    </div>
  </div>
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-md-4">
      <% links.forEach(function(link){ %>
      
        <a class="btn btn-primary btn-block" href="<%= link.text %>" role="button"><%= link.name %></a>
           <!--&& link.author.id.equals(loggedUser._id)-->
           
          <% if (currentUser){ %>
            <i class="far fa-trash-alt"></i>
        <% } %>

      <% }); %>
      
      <% if (currentUser){ %>
      <a class="btn btn-success" href="/<%= currentUser.username %>/new">Add New Link</a>
       <% } %>
    </div>
  </div>

</div>

<% include ../partials/footer %>