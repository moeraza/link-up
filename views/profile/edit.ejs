<% include ../partials/header %>


<div class="container">
  <div class="row justify-content-center">

    <div class="col-12 col-md-4">
      <h1 class="text-center">Edit <%= link.name %> </h1>
      
      <form action="/<%= currentUser.username %>/<%= link._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="name" value="<%= link.name %>">
        </div>
        
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon3">http://</span>
            </div>
            <input type="text" class="form-control" aria-describedby="basic-addon3" name="text" value="<%= link.text %>">
          </div>
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit changes</button>
      </form>
    </div>

  </div>
</div>

<% include ../partials/footer %>